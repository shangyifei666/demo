<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.UIThreadActivity">

    <TextView
        android:id="@+id/tv_ui_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:text="子线程计时器 : "
        android:textColor="#000000"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_ui_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_ui_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_ui_stop"
        android:layout_marginTop="300dp"
        android:text="开始"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_ui_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_ui_time"
        app:layout_constraintStart_toEndOf="@+id/btn_ui_start"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="300dp"
        android:text="结束"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>