<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.CLActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="正常填充--正常填充--正常填充--正常填充--正常填充--正常填充"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:text="正常填充--正常填充--正常填充--正常填充--正常填充--正常填充"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:text="主标题"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/tv_small3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv3"
        app:layout_constraintTop_toTopOf="@+id/tv3"
        app:layout_constraintBottom_toBottomOf="@+id/tv3"
        android:layout_marginLeft="10dp"
        android:text="副标题"
        android:textSize="20sp"
        android:textColor="#FF4E83E6"/>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:text="主标题"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/tv_small4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv4"
        app:layout_constraintTop_toTopOf="@+id/tv4"
        app:layout_constraintBottom_toBottomOf="@+id/tv4"
        android:layout_marginLeft="10dp"
        android:text="副标题"
        android:textSize="20sp"
        android:textColor="#FF4E83E6"/>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_small5"
        app:layout_constraintTop_toBottomOf="@+id/tv4"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:text="主标题"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/tv_small5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv5"
        app:layout_constraintBottom_toBottomOf="@+id/tv5"
        android:layout_marginLeft="10dp"
        android:text="副标题"
        android:textSize="20sp"
        android:textColor="#FF4E83E6"/>

    <TextView
        android:id="@+id/tv6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_small6"
        app:layout_constraintTop_toBottomOf="@+id/tv5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintWidth_default="wrap"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:text="超级无敌长度的主标题主标题"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/tv_small6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv6"
        app:layout_constraintBottom_toBottomOf="@+id/tv6"
        android:layout_marginLeft="10dp"
        android:text="副标题"
        android:textSize="20sp"
        android:textColor="#FF4E83E6"/>


</androidx.constraintlayout.widget.ConstraintLayout>